<h1>Listing facility_reviews</h1>

<table>
  <thead>
    <tr>
      <th>Reviewer</th>
      <th>Facility</th>
      <th>Title</th>
      <th>Description</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facility_reviews.each do |facility_review| %>
      <tr>
        <td><%= facility_review.reviewer %></td>
        <td><%= facility_review.facility %></td>
        <td><%= facility_review.title %></td>
        <td><%= facility_review.description %></td>
        <td><%= facility_review.rating %></td>
        <td><%= link_to 'Show', facility_review %></td>
        <td><%= link_to 'Edit', edit_facility_review_path(facility_review) %></td>
        <td><%= link_to 'Destroy', facility_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

