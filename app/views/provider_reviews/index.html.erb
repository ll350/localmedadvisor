<h1>Listing provider_reviews</h1>

<table>
  <thead>
    <tr>
      <th>Reviewer</th>
      <th>Provider</th>
      <th>Title</th>
      <th>Description</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @provider_reviews.each do |provider_review| %>
      <tr>
        <td><%= provider_review.reviewer %></td>
        <td><%= provider_review.provider %></td>
        <td><%= provider_review.title %></td>
        <td><%= provider_review.description %></td>
        <td><%= provider_review.rating %></td>
        <td><%= link_to 'Show', provider_review %></td>
        <td><%= link_to 'Edit', edit_provider_review_path(provider_review) %></td>
        <td><%= link_to 'Destroy', provider_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Provider review', new_provider_review_path %>
