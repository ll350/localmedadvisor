<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img data-src="holder.js/300x200" alt="...">
      <div class="caption">
        <h3><%= @provider.name %></h3>
        <p><%= @provider.specialty %></p>
		<%= @provider.city %>, <%= @provider.state %> <%= @provider.zip %>
		<div>
		  <%= link_to 'Review', new_provider_provider_review_path(@provider), class: "btn btn-primary" %> 
		 
		  <button type="button" class="btn btn-info">TODO</button>
	
		  <%= link_to 'Back', providers_path, class: "btn btn-default" %>
		</div>
      </div>
	  
    </div>
  </div>
  <div class="col-sm-6 col-md-4">
	  <table class="table">
	    <thead>
	      <tr>
	        <th>Reviewer</th>
	        <th>Title</th>
	        <th>Description</th>
	        <th>Rating</th>
	        <th colspan="3"></th>
	      </tr>
	    </thead>

	    <tbody>
	      <% @provider.provider_reviews.each do |provider_review| %>
	        <tr>
	          <td><%= provider_review.reviewer %></td>
	          <td><%= provider_review.title %></td>
	          <td><%= provider_review.description %></td>
	          <td><%= provider_review.rating %></td>

	        </tr>
	      <% end %>
	    </tbody>
	  </table>
</div>


